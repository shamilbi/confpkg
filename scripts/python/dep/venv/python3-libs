pkg_post_install() {
    # pytz, tzdata
    local dir
    while IFS= read -r dir; do
        rm -rf "$dir"
        ln -sfn "$Prefix/share/zoneinfo" "$dir"
    done < <(find "$DestDir" -type d -name zoneinfo)
}
