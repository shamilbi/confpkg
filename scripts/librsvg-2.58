#!/bin/bash

# REQ: rust: ~/.cargo/.package-cache

ConfigureOpts+=(
    --enable-introspection=auto
)

pkg_pre_configure() {
    local f=configure.ac
    if pkg_create_orig "$f"; then
        # FREETYPE2_REQUIRED=20.0.14
        sed -i -r -e 's,^(FREETYPE2_REQUIRED)=.*,\1=0,' "$f"
        pkg_autoreconf
    fi
}

pkg_read2var pkg_post_installpkg <<EOF
pkg_post_installpkg() {
    # Slackware
    chroot . /usr/bin/update-gdk-pixbuf-loaders &>/dev/null
}
pkg_post_installpkg
EOF
